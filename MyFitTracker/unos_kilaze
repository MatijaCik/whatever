<?php
if (session_status() === PHP_SESSION_NONE) session_start();
require_once "connect.php";

$user_id = $_SESSION['id'];
$msg = "";

if(isset($_POST['submit'])) {
    $tezina = floatval($_POST['tezina']);
    if($tezina > 0) {
        $stmt = $conn->prepare("INSERT INTO tezina (korisnik_id, tezina_kg) VALUES (?, ?)");
        $stmt->bind_param("id", $user_id, $tezina);
        if($stmt->execute()) {
            $msg = "Težina spremljena!";
        } else {
            $msg = "Greška prilikom spremanja težine.";
        }
        $stmt->close();
    } else {
        $msg = "Molimo unesite valjanu težinu.";
    }
}

// Povijest težina
$weights = $conn->prepare("SELECT * FROM tezina WHERE korisnik_id = ? ORDER BY datum DESC");
$weights->bind_param("i", $user_id);
$weights->execute();
$weightsResult = $weights->get_result();
?>

<h3>Unos Težine</h3>
<?php if($msg): ?><div class="alert alert-info"><?= $msg ?></div><?php endif; ?>
<form method="POST">
  <div class="mb-3">
    <label class="form-label">Težina (kg)</label>
    <input type="number" step="0.1" name="tezina" class="form-control" required>
  </div>
  <button type="submit" name="submit" class="btn btn-primary">Spremi</button>
</form>

<h4 class="mt-4">Povijest težina</h4>
<ul>
  <?php while($row = $weightsResult->fetch_assoc()): ?>
    <li><?= $row['tezina_kg'] ?> kg - <?= $row['datum'] ?></li>
  <?php endwhile; ?>
</ul>